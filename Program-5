#STRING SLICING 
x = "krishna"
print(x[1])
print(x[0:5])
print(x[::2])
print(x[::-1])
print(x[::-7])
print(x[-1:])


#STRING OPERATIONS 
s = "Artificial Intelligence and Machine Learning"
print(s.upper())
print(s.lower())
print(s.find("Machine"))
print(s.replace("Intelligence", "Foundation"))
print(len(s))
print(s.isalpha())
print(s.capitalize())
print(s.isdigit())
print(s.islower())

#string concatenation & repetition 
a1 = "Hello"
a2 = "Students"
print(a1 + a2)
print(a1 * 2)
